<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>PlantTallYellowGrass</defName>
    <label>tall grass</label>
    <description>Wild tall grass. Significantly slows down anyone moving over it.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <pathCost>18</pathCost>
    <graphicData>
      <texPath>Plant/YellowGrass</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.4</fertilityMin>
      <fertilitySensitivity>0.7</fertilitySensitivity>
      <growDays>3</growDays>
      <harvestWork>60</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.7</min>
        <max>0.85</max>
      </visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
    </plant>
  </ThingDef>
  <ThingDef ParentName="TreeBase">
    <defName>SavannaTreeAcacia</defName>
    <label>acacia tree</label>
    <description>Native to subtropical regions throughout the world, the acacia trees grow in the harshest climates.</description>
    <graphicData>
      <texPath>Plant/TreeAcacia</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <plant>
      <growDays>32.5</growDays>
      <harvestWork>1200</harvestWork>
      <harvestYield>60</harvestYield>
      <visualSizeRange>
        <min>1.3</min>
        <max>2.4</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
  <ThingDef ParentName="PlantBase">
    <defName>SavannaBush</defName>
    <label>bush</label>
    <description>A short shrub. Does not typically talk.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plant/SavannaBush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>30</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.4</fertilityMin>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>3</growDays>
      <leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
      <wildClusterRadius>4</wildClusterRadius>
      <visualSizeRange>
        <min>0.7</min>
        <max>1.1</max>
      </visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
    </plant>
  </ThingDef>
  <ThingDef ParentName="TreeBase">
    <defName>SavannaTreeBaobab</defName>
    <label>baobab tree</label>
    <description>A large round tree native to tropical savannas.</description>
    <graphicData>
      <texPath>Plant/TreeBaobab</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <plant>
      <growDays>32.5</growDays>
      <harvestWork>1200</harvestWork>
      <harvestYield>60</harvestYield>
      <visualSizeRange>
        <min>1.3</min>
        <max>3.0</max>
      </visualSizeRange>
      <wildClusterRadius>8</wildClusterRadius>
    </plant>
  </ThingDef>
</Defs>